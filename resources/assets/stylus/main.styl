@import "libs/_normalize.styl";
@import "_util.styl";

body{
	min-height:100vh;
	//background:whitesmoke;
	font-family: 'Roboto', sans-serif;
	& *{
		font-family: 'Roboto', sans-serif;
	}
}

.main-container{
	min-height:100vh;
	width:100%;
	background-image: linear-gradient(-90deg, #DBDBDB, #FFFFFF);
	//border:2vh solid #fff;
	padding:2vh;
	//display:flex;
	//flex-flow: row wrap;
	//align-items: stretch;
}

.main-header, .main-content-wrapper, .main-footer {
  flex: 1 100%;
}

.main-header{
	width:100%;
	align-self: center;
	margin-bottom:10px;
}

.msg_success{
	width:200px;
	padding:10px;
}

.logo{
	background:#444;
	padding:20px;
	padding-bottom:0px;
}
.main-nav{
	padding:20px;
	padding-bottom:10px;
	display:flex;
	flex-flow: row wrap;
	background:#444;
	& > h1{
		display:inline-block;
		margin:0px;
		margin-bottom:10px;
		font-weight:100;
		font-size:1.5rem;
		perspective:500px;
		max-width:100%;
		flex:1 auto;
		padding:1px;
		&:hover a{
			transform: scale(.97);
		}
	}
	& a{
		display:block;
		background:#888;
		color:#fff;
		padding:10px;
		text-decoration:none;
		transition:all 500ms ease;
		box-shadow:0px 14px 2px -10px #333;
		max-width:100%;
		&:hover{
			background:#555;
		}
	}
}

.info-bar{
	background:#555;
	padding:5px;
	lost-utility: clearfix;
	margin-bottom:2px;
	& > a{
		//box-shadow:5px 5px 5px #333;
		text-decoration:none;
	}
}

.main-content-wrapper{
	width:100%;
	background:#fff;
	min-height:550px;
	lost-utility: clearfix;
	display:flex;
	& > *{
		float:left;
		padding:20px;
		//flex:12 1;
	}
	& label{
		color:#fff;
	}
	& h1{
		color:whitesmoke;
	}
}

.alert{
	& > ul{
		list-style:none;
		padding:0px;
		margin:0px;
	}
	& ul li{
		color:white;
		padding:5px;
		display:block;
		width:250px;
		margin-bottom:5px;
	}
}

.alert-danger{
	& ul li{
		background:#9a1111;
	}
}

.truck,.driver{
	color:#fff;
}
.main-content{
	width:80%;
	background:#444;
	flex:1 1 80%;
	
	& > h1{
		text-transform:capitalize;
	}
}
.main-sidebar{
	width:20%;
	flex:1 1 20%;
	background:#555;
}

#googleMap{
  width:100%;
  max-width:100%;
  min-height:380px;
  height:500px;
}

.form-group{
	padding:5px;
	& > *{
		display:block;
	}
	& > label{
		margin-bottom:5px;
	}
	& input{
		border:0px;
	}
	& input[type="submit"]{
		
		padding:10px;
	}
}

.main-footer{
	padding:20px;
	width:100%;
	background:#444;
	min-height:100px;
	margin-top:10px;
}