.main-container{
    margin-top:35px;
}
.info-bar{
	z-index: 99999;
    position: fixed;
    top: 0px;
}
@media all and (max-width:21.6875em ) {
	.info-bar{
		& > *{
			display: block;
			width:100%;
			margin-bottom: 3px;
		}
	}
    .info-bar{
        position: static;
    }
	.main-container{
		margin-top:0px;
	}
}
